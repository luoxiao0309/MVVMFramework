<UserControl x:Class="MVVMFramework.View.ProdutoControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFramework.View"
             xmlns:VM="clr-namespace:MVVMFramework.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    
    <Grid Height="Auto" Width="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        </Grid>
        <TextBlock Grid.Column="1" Grid.Row="0" x:Name="Produto" Text="{Binding Descricao}" />
        <ListBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding ListaDescricao}" Width="350">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Descricao}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
